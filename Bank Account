# Define a BankAccount class
class BankAccount:
    def __init__(self, account_number, balance, date_of_opening, customer_name):
        # Initialize instance variables
        self.account_number = account_number
        self.balance = balance
        self.date_of_opening = date_of_opening
        self.customer_name = customer_name

    def deposit(self, amount):
        # Deposit money into the account
        self.balance += amount
        return amount

    def withdraw(self, amount):
        # Check if there's enough balance to withdraw the specified amount
        if amount > self.balance:
            return "Insufficient balance."
        # Withdraw the specified amount from the account
        self.balance -= amount
        return amount

    def check_balance(self):
        # Print the current balance of the account
        print("Current balance:", self.balance)

    def customer_details(self):
        # Print customer details including name, account number, opening date, and balance
        print("Customer Name:", self.customer_name)
        print("Account Number:", self.account_number)
        print("Date of Opening:", self.date_of_opening)
        print("Balance:", self.balance)

# Creating a BankAccount instance
account = BankAccount("01134984", 100000, "2023-07-02", "Maxwell Munene")

# Depositing an amount
deposit_amount = account.deposit(50000)
print("Amount deposited:", deposit_amount)

# Withdrawing an amount
withdraw_amount = account.withdraw(20000)
print("Amount withdrawn:", withdraw_amount)

# Trying to withdraw an amount larger than the balance
withdraw_amount = account.withdraw(150000)
print("Amount withdrawn:", withdraw_amount)

# Checking the current balance
account.check_balance()

# Printing customer details
account.customer_details()
