class Book:
    def __init__(self, book_id, title, author):
        self.book_id = book_id
        self.title = title
        self.author = author


class LibraryMember(Book):
    def __init__(self, member_id, name):
        self.member_id = member_id
        self.name = name
        self.borrowed_books = []
    
    def borrow_book(self, book):
        self.borrowed_books.append(book)
    
    def return_book(self, book):
        if book in self.borrowed_books:
            self.borrowed_books.remove(book)
        else:
            print("Book is not borrowed by this member.")
    
    def display_info(self):
        print(f"Member ID: {self.member_id}")
        print(f"Name: {self.name}")
        print("Borrowed Books:")
        for book in self.borrowed_books:
            print(f"Book ID: {book.book_id}, Title: {book.title}, Author: {book.author}")


# Create some book objects
book1 = Book(1, "Book1", "Author1")
book2 = Book(2, "Book2", "Author2")
book3 = Book(3, "Book3", "Author3")

# Create a library member object
member = LibraryMember(101, "John")

# Borrow books
member.borrow_book(book1)
member.borrow_book(book2)

# Display member info
member.display_info()

# Return a book
member.return_book(book2)

# Display member info again
member.display_info()
